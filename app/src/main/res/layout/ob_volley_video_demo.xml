<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_take_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Video Upload Using OB Volley"
            android:textColor="@color/text_header_color"
            android:textSize="20sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_margin="10dp"
            android:gravity="center">

            <VideoView
                android:id="@+id/api_take_video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:background="@color/light_line"
                android:layout_gravity="center"
               />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_api_take_video"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/api_btn_border"
                android:text="take video"
                android:textColor="@color/text_color" />

            <Button
                android:id="@+id/btn_api_upload_video"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="100dp"
                android:background="@drawable/api_btn_border"
                android:text="Upload image"
                android:textColor="@color/text_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_upload_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Upload Video"
            android:textColor="@color/text_header_color"
            android:textSize="20sp" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"

            android:gravity="center">

            <VideoView
                android:id="@+id/api_upload_video"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/light_line"
                android:layout_centerInParent="true"
                android:layout_gravity="center" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>