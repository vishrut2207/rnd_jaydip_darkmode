<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/woc_txt_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:alpha="1.0"
            android:background="#00000000"
            android:text="---  22/02/202  ---"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="italic|bold"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/woc_admin_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="#66E64A19"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry">


            <ImageView
                android:id="@+id/chat_image"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="7dp"
                android:background="@drawable/men"
                android:scaleType="fitXY"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/linear_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#fff"
                android:visibility="visible">

                <TextView

                    android:id="@+id/chat_txt_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:maxWidth="230dp"
                    android:text="sdazsadsadasdsadsadasdasdssasdsadsadsadsadasdsadxd"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chat_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#fff"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <ImageButton
                        android:id="@+id/chat_delete_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_delete_1" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    app:cardCornerRadius="15dp">

                    <ImageButton
                        android:id="@+id/chat_edit_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:background="@drawable/icon_edit" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#fff"
                    app:cardCornerRadius="15dp">

                    <ImageButton
                        android:id="@+id/chat_admin_image_btn_left"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_left_side"
                        android:visibility="visible" />

                    <ImageButton
                        android:id="@+id/chat_admin_image_btn_right"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_right_side"
                        android:visibility="gone" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <TextView
                android:id="@+id/chat_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:text="18:00 AM"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
