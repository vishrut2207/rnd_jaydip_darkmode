<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlaout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Default SnackBar"
            android:textColor="@color/text_header_color"
            android:textSize="22dp" />

        <Button
            android:id="@+id/default_snackbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="default snack bar" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/default_snackbar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Click event fire in snackbar"
            android:textColor="@color/text_header_color"
            android:textSize="22dp" />

       <!-- <RelativeLayout
            android:id="@+id/rr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_marginTop="20dp">-->

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/myCoordinatorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t2"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/click_enent_snackbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="click  event fire snack bar" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

<!--        </RelativeLayout>-->

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myCoordinatorLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Custom snackbar"
            android:textColor="@color/text_header_color"
            android:textSize="22dp" />

        <Button
            android:id="@+id/custom_snackbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t3"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:onClick="click"
            android:text="custom snack bar" />


        <RelativeLayout
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>